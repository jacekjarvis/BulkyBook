@model IEnumerable<Category>
@{
    int count = Model.Count() ;
    var myList = Model.ToList();
}
@{
    ViewData["Title"] = "Index";
}


<div class="container p-3">
    <div class="row pt-4">
        <div class = "col-6">
            <h2 class="text-primary">Category</h2>
        </div>
        <div class = "col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-square"></i>&nbsp; Create a New Category</a>
        </div>
    </div>




    <table class="table table-bordered table-striped" style="width:100%" >
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Order</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
           @for (int i = 0; i < count  ; i++)
            {
                <tr>
                
                    <td width="10%">@myList[i].Id    </td>
                    <td width="50%">@myList[i].Name  </td>
                    <td>@myList[i].DisplayOrder</td>
                    <td>
                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@myList[i].Id" class="btn btn-secondary" style="width:100px"><i class="bi bi-pencil-square"></i> &nbsp; Edit</a>
                    </td>
                    <td>
                        <a asp-controller="Category" asp-action="Delete" asp-route-id="@myList[i].Id" class="btn btn-danger" style="width:100px" ><i class="bi bi-trash2-fill"></i> &nbsp; Delete</a>
                    </td>
                </tr>
            }
            
            
            @*@foreach (var obj in Model)
            {
                <tr>
                
                    <td width="10%">@obj.Id</td>
                    <td width="50%">@obj.Name</td>
                    <td>@obj.DisplayOrder</td>
                </tr>
            }*@
            
        </tbody>
    </table>

</div>