@model Category
@{
    ViewData["Title"] = "Delete";
}

<form method="post">
    <div class="border p-3 mt-4"> @*padding 3 and marging top 4*@
        <div class="row pb-2">  @*padding bottom 2*@
            <h2>Delete Category</h2>
            <hr />
        </div>

        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" disabled />
            
            @*<span asp-validation-for="Name" class="text-danger"></span>*@
        </div>

        <div class="mb-3">
            <label asp-for="DisplayOrder"></label>
            <input asp-for="DisplayOrder" class="form-control" disabled />
            @*<span asp-validation-for="DisplayOrder" class="text-danger"></span>*@
        </div>

        <button type="submit" class="btn btn-danger" style="width:150px"><i class="bi bi-trash2-fill"></i> &nbsp; Delete</button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="width:150px">Back to List</a>
    </div>
</form>

@*Client side validation is achieved by adding this code here:*@
@section scripts 
{
    @{
        <partial name="_ValidationScriptsPartial.cshtml" />
    }
}
